<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>

        <% if (menssagem == true){ %>
        <div class="alert alert-success notifi" role="alert">
            <h2 class="text-notifi">Page not found</h2>
        </div>
        <% } %>
    
    <div class="container">
        <hr>
        <h1>Questions</h1>
        <hr>
        <a href="/perguntar" class="btn btn-primary">Ask</a>
        <hr>
        <% perguntas.forEach(pergunta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="
                    /pergunta/<%= pergunta.id %>
                    " class="btn btn-info">Respond</a>
                </div>
            </div>
        <% }) %>
    </div>

    <script src="/js/main.js"></script>

</body>
<%- include ('partials/footer.ejs') %>