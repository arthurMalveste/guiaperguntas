<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>

    <div class="container">

        <div class="card formulario-cadastro" id="formulario-cadastro">
            <div class="car-header">
                <h3 class="title">Register</h3>
            </div>
            <div class="card-body">
                <hr>
                <form action="/salvarcadastro" method="POST">
                    <label for="">User</label>
                    <input name="usuario" type="text" placeholder="User" class="form-control">
                    <br>
                    <label for="">Password</label>
                    <input name="senha" type="password" placeholder="Password" class="form-control">
                    <br>
                    <label for="">Repeat Password</label>
                    <input name="confirmacaoSenha" type="password" placeholder="Password" class="form-control">
                    
                    
                    <br>
                    <button class="btn btn-success">Register</button>
                </form>
            </div>
        </div>
        <div class="resposta">
            <% if (msgErro) { %>
                <p class="msgErro"><%= msgErro %></p>
            <% } %>
        </div>
    </div>

</body>
<%- include ('partials/footer.ejs') %>