<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">

        <div class="card" id="formulario-pergunta">
            <div class="car-header">
                <h3 class="title">Question</h3>
            </div>
            <div class="card-body">
                <hr>
                <form action="/salvarpergunta" method="POST">
                    <label for="">Title</label>
                    <input name="titulo" type="text" placeholder="Title" class="form-control">
                    <br>
                    <label for="">Description</label>
                    <textarea name="descricao" placeholder="Describe your question here" class="form-control"></textarea>
                    <br>
                    <button class="btn btn-success">Ask</button>
                </form>
            </div>
        </div>
    </div>
</body>
